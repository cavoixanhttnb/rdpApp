                        </Frame>
                        <BoxView Grid.Row="3" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        </BoxView>
                        <Button Grid.Row="4" Text="Register" Margin="0,-25,0,0" HorizontalOptions="Center" TextColor="White" BackgroundColor="#5C5C5C" Clicked="Button_Clicked" />
                    </Grid>

                    <Frame Grid.Row="7" Margin="0,10,0,0" BackgroundColor="#5C5C5C" HorizontalOptions="FillAndExpand" HeightRequest="50">
                        <Label Text="eFIX" TextColor="White" FontSize="40" HorizontalOptions="Center"/>
                    </Frame>

                    <Grid Grid.Row="8" Margin="0,0,0,0" RowSpacing="0" BackgroundColor="#DFDFDF">
                        <Grid.RowDefinitions>
