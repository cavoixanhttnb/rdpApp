                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <Frame Grid.Row="0" Grid.Column="0" HasShadow="False" HorizontalOptions="FillAndExpand" BackgroundColor="#EC0C26" HeightRequest="50">
                            <Label Text="eQ" TextColor="White" FontSize="40" HorizontalOptions="Center"/>
