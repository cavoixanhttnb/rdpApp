                        <Frame Grid.Row="1" HorizontalOptions="FillAndExpand" HeightRequest="25" VerticalOptions="StartAndExpand">
                            <Label Text="0.1683 per kWh" TextColor="Black" FontSize="15" HorizontalOptions="CenterAndExpand"/>
                        </Frame>
                        <Frame Grid.Row="2" BackgroundColor="#F6F6F6" HorizontalOptions="FillAndExpand">
                            <Label FontFamily="Helvetica Neue,Helvetica,Arial,sans-serif" Text="eSAVE is a discount of the regulated tariff, as the regulated tariff changes eSAVE retains the same discount to the tariff throughout the contract length" HorizontalOptions="Center"/>
                        </Frame>
                        <BoxView Grid.Row="3" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" HeightRequest="40">
                        </BoxView>
                        <Button Grid.Row="4" Text="Register" Margin="0,-25,0,0" HorizontalOptions="Center" TextColor="White" BackgroundColor="#5C5C5C" Clicked="Button_Clicked" />
