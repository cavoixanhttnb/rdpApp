                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Frame Grid.Row="0" BackgroundColor="#F6F6F6" HorizontalOptions="FillAndExpand" HeightRequest="25">
                            <Frame Padding="5,0,5,0" BackgroundColor="#EC0C26">
