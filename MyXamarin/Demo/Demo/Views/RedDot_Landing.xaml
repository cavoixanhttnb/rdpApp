                        </Grid.RowDefinitions>
                        <Frame Grid.Row="0" BackgroundColor="#F6F6F6" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Frame Padding="5,0,5,0" BackgroundColor="#EC0C26">
                                <Label Text="Save $1,218.00 annually (20%) *" TextColor="White" Font="Bold,15" HorizontalOptions="CenterAndExpand" />
                            </Frame>
                        </Frame>
                        <Frame Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Label Grid.Row="1"  Text="20% Discount" TextColor="Black" FontSize="15" HorizontalOptions="CenterAndExpand"/>
                        </Frame>
                        <Frame Grid.Row="2" BackgroundColor="#F6F6F6" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
